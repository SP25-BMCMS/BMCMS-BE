generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_CHATBOT_URL")
}

model Chat {
  id        String   @id @default(uuid())
  userId    String
  message   String
  isUser    Boolean  @default(true)
  type      String?  @default("user") // system, crack, user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
} 