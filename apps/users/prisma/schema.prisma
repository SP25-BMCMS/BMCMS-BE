// Cấu hình Prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_USER_SERVICE")
}

model User {
  userId      String   @id @default(uuid())
  username    String   @unique
  password    String
  email       String   @unique
  phone       String?
  role        Role
  dateOfBirth DateTime?
  gender      Gender?

  userDetails UserDetails?
}

model UserDetails {
  userId          String    @id @default(uuid()) @map("user_id")
  apartmentNumber String?   // Chỉ dùng khi role = Resident
  buildingId      String?   // Chỉ dùng khi role = Resident
  positionId      String?   // Chỉ dùng khi role = Employee
  departmentId    String?   // Chỉ dùng khi role = Employee
  status          EmploymentStatus? // Chỉ dùng khi role = Employee

  user            User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
}

model Department {
  departmentId   String     @id @default(uuid())
  departmentName String     @unique
  description    String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model WorkingPosition {
  positionId   String        @id @default(uuid())
  positionName PositionName
  description  String?
  status       PositionStatus
}

enum Role {
  Admin
  Manager
  Resident
  Employee
}

enum Gender {
  Male
  Female
  Other
}

enum EmploymentStatus {
  Active
  Inactive
  Probation
}

enum PositionName {
  Staff
  Leader
  Manager
  Admin
}

enum PositionStatus {
  Active
  Inactive
}
